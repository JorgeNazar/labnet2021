@model List<TP4.EF.MVC.Models.CustomersView>

@{
    ViewBag.Title = "Clientes";
}

<a class="btn btn-success" onclick="location.href='@Url.Action("Insert")'">Nuevo Cliente</a>

<table class="table table-dark">
    <thead>
        <tr>
            
            <th scope="col">Id Cliente</th>
            <th scope="col">Contact Name</th>
            <th scope="col">Company Name</th>
            <th scope="col">Phone</th>
            <th scope="col"></th>
            <th scope="col"></th>

        </tr>
    </thead>

    @foreach (var customers in Model)
    {
        <tr>
                
                <td> @customers.Id </td>
                <td> @customers.ContactName </td>
                <td> @customers.CompanyName </td>
                <td> @customers.Phone </td>
                <td>@Html.ActionLink("Modificar", "Modify", new { id = customers.Id }, new { @class = "btn btn-warning", onclick = "return confirm('Seguro que desea modificar?')" })</td>

                <td>@Html.ActionLink("Eliminar", "Delete", new { id = customers.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Seguro que desea eliminar?')" })</td>
        </tr>
    }
</table>