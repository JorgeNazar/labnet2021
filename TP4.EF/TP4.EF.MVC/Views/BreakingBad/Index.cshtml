@model List<TP4.EF.MVC.Models.BreakingBadView>

@{ ViewBag.Title = "Breaking Bad"; }



<table class="table table-dark">
    <thead>
        <tr>
            
            <th scope="col">Nombre</th>
            
            <th scope="col">Nick</th>
            <th scope="col"></th>
            <th scope="col">Foto</th>
            

        </tr>
    </thead>

    @foreach (var breakingBad in Model)
    {
<tr>
    <td> @breakingBad.name  </td>
    
    <td> @breakingBad.nickname </td>
    <th scope="col"></th>
    <td> <img src="@breakingBad.img;" style="width: 20%" /> </td>
</tr>}
</table>